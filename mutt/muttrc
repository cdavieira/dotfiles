set spoolfile="+INBOX"
set record = "+Sent"
set postponed = "+Drafts"
set trash = "+Trash"

set attach_save_dir="${tmpdir}"
set message_cachedir="${tmpdir}"

set imap_authenticators="oauthbearer:xoauth2"
set imap_oauth_refresh_command="python $HOME/.config/mutt/mutt_oauth2.py ${header_cache}/${imap_user}.token"

set smtp_authenticators=${imap_authenticators}
set smtp_oauth_refresh_command=${imap_oauth_refresh_command}

set send_charset="utf-8"
set assumed_charset="iso-8859-1"
set editor="vim -c 'set syntax=mail ft=mail enc=utf-8'"

set sort=reverse-date-received
set sort_aux=threads
set strict_threads=yes
set ssl_force_tls=yes

set realname="Carlos Vieira"
set from="${imap_user}"

# mailboxes we want to monitor for new mail
mailboxes "="

