set header_cache="$HOME/.cache/mutt"
set tmpdir="$HOME/.cache/mutt/tmp"

# OUTLOOK
set imap_user="$OUTLOOK"
set folder="imaps://$OUTLOOK@outlook.office365.com:993"
set smtp_url="smtp://${imap_user}@smtp-mail.outlook.com:587"

# GMAIL
# set imap_user="$GMAIL"
