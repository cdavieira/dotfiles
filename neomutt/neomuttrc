### Config
set real_name = 'Carlos Vieira'
set me_too = yes
#set folder = "$MAIL" #default: "$HOME/Mail"
#set spool_file = "$MAIL" #default
#set record = "$HOME/sent/" #default


### Gmail config
ifdef GMAIL	\
set from = "$GMAIL" ; \
set folder = "imaps://$GMAIL@imap.gmail.com:993" ; \
set smtp_url = "smtps://$GMAIL@smtp.gmail.com:587" ; \
set imap_user = "$GMAIL" ; \
set imap_authenticators="oauthbearer:xoauth2" ; \
set imap_oauth_refresh_command = "" ; \
set imap_check_subscribed = yes ; \
set spool_file = "+INBOX" ; \
set record = "+Sent" ; \
set trash = "+Trash" ; \
set postponed = "+Drafts" ; \
finish


